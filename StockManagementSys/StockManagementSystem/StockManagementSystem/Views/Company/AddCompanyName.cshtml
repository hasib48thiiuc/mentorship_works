@using StockManagementSystem.Models.Domain;
@model StockManagementSystem.Models.Domain.Company
@{
    ViewData["Title"] = "Add-Company-Name";
    
   IEnumerable<Company> cmps= ViewData["Company"] as IEnumerable<Company>;
}

<h1 style="color:ActiveCaption">Add-Company-Name</h1>

<div class="mt-2 " style="width:50%">
    <form asp-action="AddCompanyName">

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>

            <input asp-for="Name" type="text" class="form-control">

            <span class="text-danger" asp-validation-for="Name">
            </span>

        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

    </form>


</div>

<div class="mt-2" style="width:100%">

    <div class="row">
        <div class="col-md-4 mb-5">


        
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Serial No</td>
                    <td>Name</td>
                    <td>
                        Action
                    </td>

                </tr>
                @foreach (var item in cmps)
                {
                    <tr>
                        
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a href="/Company/EditCompanyName?id=@item.Id" class="btn btn-success">

                                Edit

                            </a>
                            <a href="/Company/RemoveCompany?id=@item.Id" class="btn btn-danger">

                                Delete

                            </a>

                        </td>

                    </tr>
                }
            </thead>


        </table>


    </div>
</div>

