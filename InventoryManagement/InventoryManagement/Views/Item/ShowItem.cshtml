@model IEnumerable<InventoryManagement.Models.Domain.Item>
@{
    ViewData["Title"] = "ShowItem";
}




<div class="mt-2" style="width:100%">

    <div class="row">
    <div class="col-md-4 mb-5">


        <a href="/Item/AddItem" class="btn btn-primary">
        
            Add Item
        
        </a>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Price</td>
                    <td>Quantity</td>
                    <td>
                        Action
                    </td>

                </tr>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>
                            <a href="/Item/EditItem?id=@item.Id" class="btn btn-success">

                                Edit

                            </a>
                            <a href="/Item/DeleteItem?id=@item.Id" class="btn btn-danger">

                                Delete

                            </a>

                        </td>

                    </tr>
                }
            </thead>



        </table>

    
    </div>
</div>








